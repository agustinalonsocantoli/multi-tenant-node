{
  "compilerOptions": {
    "target": "es2016",                               

    "module": "commonjs",                             
    "rootDir": "src",                                 
    "allowJs": true,                               
    "outDir": "dist/",   
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },          
    "typeRoots": ["./node_modules/@types", "./src/@types"],                   
    "esModuleInterop": true,                                             
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                                    
    "skipLibCheck": true,
    "strictNullChecks": true                     
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
